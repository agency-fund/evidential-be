{
  "$schema": "https://railway.com/railway.schema.json",
  "deploy": {
    "preDeployCommand": "/bin/sh -c \"exec uv run --no-dev ./atlas migrate apply --env sa_postgres --postgres \\\"$DATABASE_URL\\\"\""
  },
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway",
    "watchPatterns": [
      "/railway.json",
      "/Dockerfile.railway",
      "/pyproject.toml",
      "/uv.lock",
      "/.gitignore",
      "/.dockerignore",
      "/src/**"
    ]
  }
}
