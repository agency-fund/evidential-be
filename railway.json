{
  "$schema": "https://railway.com/railway.schema.json",
  "deploy": {
    "preDeployCommand": "/bin/sh -c \"exec uv run --no-dev ./atlas migrate apply --env sa_postgres --url \\\"$DATABASE_URL\\\"\""
  },
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway",
    "watchPatterns": [
      ".dockerignore",
      ".gitignore",
      "Dockerfile.railway",
      "atlas.hcl",
      "migrations/**",
      "pyproject.toml",
      "railway.json",
      "src/**",
      "uv.lock"
    ]
  }
}
